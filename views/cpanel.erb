<div class="cpanel">
	<div class="card">
		<h2>Add directory</h2>
		<form method="POST" action="/directories">
			<input type="text" name="url" placeholder="http://directory.com" />
			<input type="submit" value="Add" />
		</form>
		<div class="directory-response">

		</div>
	</div>

	<div class="card">
		<h2>Download file</h2>
	  <form method="GET" action="/panel">
			<input type="text" name="file_name" placeholder="Return of the King" />
			<select name="file_type">
			  <option value="movie">Movie</option>
			  <option value="show">TV</option>
			  <option value="music">Music</option>
			  <option value="software">Software</option>
			  <option value="ebook">eBook</option>
			</select>
			<input type="submit" value="Find" />
		</form>
		<div class="download-response">
			<%= @file_name %>
		</div>
	</div>

	<div class="card">
		<h2>Reddit</h2>
	  <form method="POST" action="/reddit">
			<input type="submit" value="Reddit" />
		</form>
		<div class="download-response">
		</div>
	</div>
</div>